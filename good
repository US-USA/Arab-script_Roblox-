for _, v in pairs(game:GetService("Workspace")["GlassModel"]:GetDescendants()) do
    if v:IsA("BasePart") then
        -- Create a flag to track if the part's color has changed
        local colorChanged = false  

        v.Touched:Connect(function(hit)
            local character = hit.Parent
            local humanoid = character and character:FindFirstChildOfClass("Humanoid")

            if humanoid then
                -- If the player is dead, do nothing
                if humanoid.Health == 0 then
                    return
                end
                
                -- If color has not changed before, change it and lock it
                if not colorChanged then
                    v.Color = Color3.fromRGB(0, 255, 0)  -- Change to green permanently
                    colorChanged = true  -- Lock the color
                end
            end
        end)
    end
end
